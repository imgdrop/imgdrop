{
   "private": true,
   "dependencies": {
      "@material-ui/core": "4.9.12",
      "@material-ui/icons": "4.9.1",
      "@material-ui/styles": "4.9.10",
      "@sentry/browser": "5.15.5",
      "@types/react": "16.9.34",
      "@types/react-helmet": "5.0.15",
      "@types/utif": "3.0.0",
      "gatsby": "2.21.9",
      "notistack": "0.9.11",
      "react": "16.13.1",
      "react-dom": "16.13.1",
      "react-dropzone": "11.0.1",
      "react-helmet": "6.0.0",
      "utif": "3.1.0"
   },
   "devDependencies": {
      "@types/jest": "25.2.1",
      "@types/react-test-renderer": "16.9.2",
      "@typescript-eslint/eslint-plugin": "2.30.0",
      "@typescript-eslint/parser": "2.30.0",
      "eslint": "6.8.0",
      "eslint-config-airbnb-typescript": "7.2.1",
      "eslint-config-prettier": "6.11.0",
      "eslint-plugin-import": "2.20.2",
      "eslint-plugin-jsx-a11y": "6.2.3",
      "eslint-plugin-react": "7.19.0",
      "eslint-plugin-react-hooks": "2.5.1",
      "gatsby-cli": "2.12.7",
      "gatsby-plugin-material-ui": "2.1.8",
      "gatsby-plugin-prefetch-google-fonts": "1.4.3",
      "gatsby-plugin-react-helmet": "3.3.1",
      "gatsby-plugin-robots-txt": "1.5.0",
      "gatsby-plugin-sitemap": "2.4.1",
      "gatsby-plugin-typescript": "2.4.0",
      "jest": "25.5.3",
      "npm-run-all": "4.1.5",
      "prettier": "2.0.5",
      "react-test-renderer": "16.13.1",
      "ts-jest": "25.4.0",
      "typescript": "3.8.3",
      "webpack-glsl-minify": "1.4.0",
      "worker-plugin": "4.0.3"
   },
   "scripts": {
      "develop": "gatsby develop",
      "build": "run-s build:*",
      "build:clean": "gatsby clean",
      "build:gatsby": "gatsby build",
      "serve": "gatsby serve",
      "lint": "run-s lint:*",
      "lint:tsc": "tsc",
      "lint:eslint": "eslint \"**/*.{ts,tsx}\" --max-warnings 0",
      "lint:prettier": "prettier \"**/*.{ts,tsx,js,json,yml}\" -c",
      "fix": "run-s fix:*",
      "fix:eslint": "yarn lint:eslint --fix",
      "fix:prettier": "yarn lint:prettier --write",
      "test": "jest --silent --collectCoverage"
   },
   "browserslist": [
      "chrome >= 57",
      "firefox >= 52",
      "edge >= 16",
      "safari >= 11",
      "samsung >= 7.2"
   ],
   "eslintConfig": {
      "ignorePatterns": [
         "**/*.js"
      ],
      "extends": [
         "airbnb-typescript",
         "plugin:@typescript-eslint/eslint-recommended",
         "plugin:@typescript-eslint/recommended",
         "plugin:@typescript-eslint/recommended-requiring-type-checking",
         "prettier",
         "prettier/react",
         "prettier/@typescript-eslint"
      ],
      "parserOptions": {
         "project": "./tsconfig.json"
      },
      "rules": {
         "no-console": "off",
         "react/prop-types": "off",
         "import/prefer-default-export": "off",
         "import/extensions": "off",
         "sort-imports": [
            "warn",
            {
               "ignoreDeclarationSort": true
            }
         ],
         "import/order": [
            "warn",
            {
               "newlines-between": "never",
               "alphabetize": {
                  "order": "asc"
               }
            }
         ]
      },
      "overrides": [
         {
            "files": [
               "*.test.*",
               "src/test-setup.ts"
            ],
            "rules": {
               "dot-notation": "off",
               "@typescript-eslint/no-explicit-any": "off",
               "@typescript-eslint/no-non-null-assertion": "off",
               "import/no-extraneous-dependencies": "off"
            }
         }
      ]
   },
   "prettier": {
      "tabWidth": 3,
      "printWidth": 90,
      "singleQuote": true,
      "jsxSingleQuote": true,
      "overrides": [
         {
            "files": "*.yml",
            "options": {
               "tabWidth": 2
            }
         }
      ]
   },
   "jest": {
      "preset": "ts-jest",
      "testPathIgnorePatterns": [
         "/node_modules/",
         "/.cache/"
      ],
      "setupFiles": [
         "<rootDir>/src/test-setup.ts"
      ],
      "collectCoverageFrom": [
         "**/*.{ts,tsx}"
      ],
      "clearMocks": true,
      "restoreMocks": true
   }
}
